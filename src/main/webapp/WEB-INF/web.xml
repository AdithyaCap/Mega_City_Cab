<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.example.mega_city_cab.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookRideController</servlet-name>
        <servlet-class>com.example.mega_city_cab.controllers.BookRideController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookRideController</servlet-name>
        <url-pattern>/BookRideController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserDashboardController</servlet-name>
        <servlet-class>com.example.mega_city_cab.controllers.UserDashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDashboardController</servlet-name>
        <url-pattern>/UserDashboardController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserRegistrationController</servlet-name>
        <servlet-class>com.example.mega_city_cab.controllers.UserRegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistrationController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DriverController</servlet-name>
        <servlet-class>com.example.mega_city_cab.controllers.DriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverController</servlet-name>
        <url-pattern>/driver-dashboard</url-pattern>
    </servlet-mapping>

</web-app>